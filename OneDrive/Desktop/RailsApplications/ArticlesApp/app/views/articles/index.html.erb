<div class="container">
  <h1 class="text-center mb-4">Articles</h1>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <% @articles.each do |article| %>
        <div class="card mb-4 text-center">
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
          </div>
          
          <div class="card-footer">
            <%= link_to 'View', article_path(article), class: 'btn btn-primary btn-sm mr-2' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-secondary btn-sm mr-2' %>
            <%= button_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </div>
          <div class="card-footer text-muted">
            Created <%= time_ago_in_words(article.created_at) %> ago |
            Edited <%= time_ago_in_words(article.updated_at) %> ago
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
  </div>
  <br>
  <br>
  <br>
  <br>
</div>
