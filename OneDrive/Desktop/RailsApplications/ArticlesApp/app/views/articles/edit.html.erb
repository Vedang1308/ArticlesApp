<div class="container">
  <h1 class="text-center mb-4">Edit Article</h1>

  <%= form_for(@article) do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :category_ids, "Select Categories", class: "form-label" %>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, { }, { class: 'form-check-input' }) do |b| %>
        <div class="form-check">
          <%= b.check_box %>
          <%= b.label class: 'form-check-label' %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= f.submit "Update Article", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to 'Cancel', article_path(@article), class: 'btn btn-secondary' %>
  </div>
</div>
